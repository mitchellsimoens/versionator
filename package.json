{
  "name": "@mitchellsimoens/versionator",
  "version": "1.0.0",
  "description": "Check for module version updates supporting monorepos",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "versionator": "./bin/versionator"
  },
  "files": [
    "assets",
    "bin",
    "lib",
    "typings"
  ],
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "bump": "npm version patch",
    "lint": "eslint 'bin/**/*' 'src/**/*.ts'",
    "lint-staged": "lint-staged",
    "postbump": "git push --follow-tags",
    "start": "node -r ts-node/register src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitchellsimoens/versionator.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "version",
    "update",
    "check",
    "node",
    "npm",
    "yarn",
    "monorepo",
    "typescript"
  ],
  "author": "Mitchell Simoens <mitchellsimoens@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mitchellsimoens/versionator/issues"
  },
  "homepage": "https://github.com/mitchellsimoens/versionator#readme",
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "lint-staged": {
    "bin/**/*,src/**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "cli-table3": "0.5.1",
    "colorette": "1.1.0",
    "globby": "10.0.1",
    "read-pkg": "5.2.0",
    "semver": "6.2.0",
    "yargs": "13.3.0"
  },
  "devDependencies": {
    "@types/globby": "9.1.0",
    "@types/node": "12.6.8",
    "@types/read-pkg": "5.1.0",
    "@types/semver": "6.0.1",
    "@types/yargs": "13.0.0",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "eslint": "6.0.1",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.18.1",
    "eslint-plugin-jest": "22.11.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.2",
    "husky": "3.0.1",
    "lint-staged": "9.2.0",
    "prettier": "1.18.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  }
}
