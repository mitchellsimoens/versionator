{
  "name": "@mitchellsimoens/versionator",
  "version": "1.0.4",
  "description": "Check for module version updates supporting monorepos",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "versionator": "./bin/versionator"
  },
  "files": [
    "assets",
    "bin",
    "lib",
    "typings"
  ],
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "bump": "npm version patch",
    "lint": "eslint 'bin/**/*' 'src/**/*.ts'",
    "postbump": "git push --follow-tags",
    "start": "node -r ts-node/register src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitchellsimoens/versionator.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "version",
    "update",
    "check",
    "node",
    "npm",
    "yarn",
    "monorepo",
    "typescript"
  ],
  "author": "Mitchell Simoens <mitchellsimoens@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mitchellsimoens/versionator/issues"
  },
  "homepage": "https://github.com/mitchellsimoens/versionator#readme",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "bin/**/*,src/**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "cli-table3": "0.6.0",
    "colorette": "1.2.1",
    "globby": "11.0.1",
    "read-pkg": "5.2.0",
    "semver": "7.3.2",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "@types/globby": "9.1.0",
    "@types/node": "14.0.24",
    "@types/read-pkg": "5.1.0",
    "@types/semver": "7.3.1",
    "@types/yargs": "15.0.5",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "eslint": "7.5.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.18.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
